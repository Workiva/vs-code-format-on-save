{
	"name": "over-react-format-on-save",
	"displayName": "OverReact Format on Save",
	"description": "A Dart project formatting tool that enables formatting on file save. Attempts to use OverReact Format but defaults to dartfmt.",
	"version": "1.0.3",
	"publisher": "Workiva",
	"repository": "https://github.com/Workiva/vs-code-format-on-save/",
	"engines": {
		"vscode": "^1.97.0"
	},
	"categories": ["Other"],
	"activationEvents": ["onLanguage:dart"],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "pnpm run check-types && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "pnpm run check-types && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile",
		"check-types": "tsc --noEmit"
	},
	"icon": "images/OverReact_Logo.png",
	"devDependencies": {
		"@types/node": "20.x",
		"@types/semver": "^7.5.8",
		"@types/vscode": "^1.97.0",
		"@vscode/vsce": "^3.2.2",
		"typescript": "^5.7.3",
		"esbuild": "^0.24.2",
		"npm-run-all": "^4.1.5"
	},
	"dependencies": {
		"semver": "^7.7.1",
		"yaml": "^2.7.0"
	}
}
